generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPERADMIN
  ADMIN
  CONSULTANT
  USER
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String?
  role      UserRole  @default(SUPERADMIN)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Contract {
  id                         String       @id @default(uuid())
  namaPaket                  String
  kabupatenKota              String
  distrik                    String
  kampung                    String
  titikKoordinat             String?

  pejabatPembuatKomitmen     String
  nipPejabatPembuatKomitmen  String

  nomorKontrak               String
  namaPenyedia               String

  nilaiKontrak               Float
  nilaiAnggaran              Float
  sumberDana                 String

  tanggalKontrak             DateTime

  volumeKontrak              Float
  satuanKontrak              String

  korwaslap                  String
  nipKorwaslap               String

  pengawasLapangan           String
  nipPengawasLapangan        String

  hasilProdukAkhir           String?
  progresFisik               Float?
  progresKeuangan            Float?

  keuanganTerbayar           Float?
  volumeCapaian              Float?
  satuanCapaian              String?

  createdAt                  DateTime  @default(now())
  updatedAt                  DateTime  @updatedAt
}


